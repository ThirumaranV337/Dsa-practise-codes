class Solution:
	def twoSum(self, arr, target):
		left=0
		arr.sort()
		right=len(arr)-1
		while left<right:
		    sum=arr[left]+arr[right]
		    if sum>target:
		        right-=1
		    elif sum<target:
		        left+=1
		    else:
		        return True
		return False
Object_1=Solution()
arr=[1,-2,-3,1]
target=-2
ans=Object_1.twoSum(arr,target)
#time complexity for sorting it takes (nlogn)
#for pointer it take o(n)
#space complexity for Sorting is o(logn)
#time complexity o(nlogn)
#space complexity is o(logn)
