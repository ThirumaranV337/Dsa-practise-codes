class Solution():
   def findtriplets(self,arr):
      arr.sort()
      length=len(arr)
      for i in range(length):
          left=i+1
          rigth=length-1
          while left>right:
                curr_sum=arr[i]+arr[left]+arr[right]
                if curr_sum==0:
                   return True
                elif curr_sum<0:
                     left+=1
               else:
                     right-=1
      return False


